<Page loaded="loaded" xmlns:navbar="views/components/navbar">
  <Page.actionBar>
      <ActionBar title="Plus">
        <Image src="res://logorjpr" width="40px"/>
      </ActionBar>
  </Page.actionBar>
  <GridLayout columns="*" rows="*, 60">
      <StackLayout id="links" orientation="vertical" verticalAlignment="top">
        <button tap="toAccount">
          <button.formattedText>
              <formattedString>
                <formattedString.spans>
                    <span text="&#xE87C;   " fontFamily="MaterialIcons-Regular" />
                    <span text="{{ isSignedIn ? 'Account' : 'Login' }}" />
                </formattedString.spans>
              </formattedString>
          </button.formattedText>
        </button>
        <button tap="toTips">
          <button.formattedText>
              <formattedString>
                <formattedString.spans>
                    <span text="&#xE42E;   " fontFamily="MaterialIcons-Regular" />
                    <span text="Tips" />
                </formattedString.spans>
              </formattedString>
          </button.formattedText>
        </button>
        <button tap="toAbout">
          <button.formattedText>
              <formattedString>
                <formattedString.spans>
                    <span text="&#xE88E;   " fontFamily="MaterialIcons-Regular" />
                    <span text="About" />
                </formattedString.spans>
              </formattedString>
          </button.formattedText>
        </button>
      </StackLayout>
      <navbar:navbar row="1" pageName="plus"/>
  </GridLayout>
</Page>
