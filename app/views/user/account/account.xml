<Page loaded="loaded" xmlns:navbar="views/components/navbar">
  <Page.actionBar>
      <ActionBar title="My Account">
      </ActionBar>
  </Page.actionBar>
  <GridLayout columns="*" rows="*, 60">
      <StackLayout orientation="vertical" horizontalAlignment="center" verticalAlignment="center">
        <Label text="{{ name }}" />
        <Label text="{{ email }}" />
        <Button text="Sign Out" tap="signOut" class="submit" />
      </StackLayout>
      <navbar:navbar row="1"/>
  </GridLayout>
</Page>
