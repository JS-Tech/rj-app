<Page loaded="loaded">
  <Page.actionBar>
      <ActionBar title="My Account" />
  </Page.actionBar>
  <StackLayout orientation="vertical" horizontalAlignment="center" verticalAlignment="center">
    <Label text="{{ firstname + ' ' + lastname }}" />
    <Label text="{{ email }}" />
    <Button text="Edit" tap="toEdit" class="submit" />
    <Button text="Profile picture" tap="toImage" class="submit" />
    <Button text="Sign Out" tap="signOut" class="submit" />
  </StackLayout>
</Page>
