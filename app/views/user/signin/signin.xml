<Page loaded="loaded" xmlns:navbar="views/components/navbar">
  <Page.actionBar>
      <ActionBar title="Sign In">
      </ActionBar>
  </Page.actionBar>
  <GridLayout columns="*" rows="*, 60">
    <StackLayout orientation="vertical" verticalAlignment="center">
      <TextField id="email" text="{{ email }}" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
      <TextField hint="Password" text="{{ password }}" secure="true" />

      <Button text="Sign in" class="submit" tap="signIn" />
      <Button text="Sign up" class="link" tap="toSignUp" />
    </StackLayout>
    <navbar:navbar row="1"/>
  </GridLayout>
</Page>
