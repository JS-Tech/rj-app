<Page loaded="loaded">
  <Page.actionBar>
      <ActionBar title="Se connecter">
        <Image src="res://logorjpr" width="40px"/>
      </ActionBar>
  </Page.actionBar>
  <StackLayout orientation="vertical" verticalAlignment="center">
    <Label text="&#xE0DA;" class="material-font icon"/>
    <TextField text="{{ email }}" hint="Email" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
    <TextField hint="Mot de passe" text="{{ password }}" secure="true" />

    <Button text="Se connecter" class="submit" tap="signIn" visibility="{{ isLoading ? 'collapse' : 'visible' }}" />
    <ActivityIndicator busy="{{ isLoading }}" visibility="{{ isLoading ? 'visible' : 'collapse' }}" row="0" width="50" />
