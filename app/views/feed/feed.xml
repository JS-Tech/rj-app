<Page loaded="loaded">
  <Page.actionBar>
      <ActionBar title="Feed">
        <ActionItem tap="newPost" ios.systemIcon="7" ios.position="right" android.systemIcon="ic_menu_add" android.position="actionBar"/>
      </ActionBar>
  </Page.actionBar>
  <GridLayout columns="*, *, *, *" rows="*, 60">
      <Repeater items="{{ posts }}" colSpan="4">
          <Repeater.itemTemplate>
            <GridLayout columns="*" rows="auto, auto">
              <Label text="{{ author }}" row="0"/>
              <TextView text="{{ message }}" row="1"/>
            </GridLayout>
          </Repeater.itemTemplate>
      </Repeater>
      <Button class="nav" text="Feed" col="0" row="1"/>
      <Button class="nav" text="Programme" col="1" row="1"/>
      <Button class="nav" text="TÃ©moignage" col="2" row="1"/>
      <Button class="nav" text="Plus" col="3" row="1"/>
  </GridLayout>
</Page>
