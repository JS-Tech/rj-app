<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar title="Poster"/>
  </Page.actionBar>
  <ScrollView>
    <StackLayout orientation="vertical" verticalAlignment="center">
        <TextView text="{{ message }}" height="200"/>
        <Button text="Choisir une photo" tap="selectImage" />
        <Button text="Prendre une photo" tap="takeImage" />
        <Image id="preview" />

        <Button text="Poster" tap="newPost" class="submit" />
    </StackLayout>
  </ScrollView>
</Page>
