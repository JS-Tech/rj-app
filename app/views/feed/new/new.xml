<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar title="New post">
      <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
    </ActionBar>
  </Page.actionBar>
  <StackLayout orientation="vertical" verticalAlignment="center">
    <TextView text="{{ message }}" height="200"/>

    <Button text="Post" tap="newPost" class="submit" />
  </StackLayout>
</Page>
