<Page loaded="loaded" xmlns:navbar="views/components/navbar">
  <!-- ActionBar -->
  <Page.actionBar>
      <ActionBar>
        <StackLayout orientation="horizontal" horizontalAlignment="center">
          <Image visibility="{{ !isNavigating ? 'visible' : 'collapsed' }}" src="res://logorjpr" width="40px"></Image>
          <ActivityIndicator visibility="{{ isNavigating ? 'visible' : 'collapsed' }}" width="40px" busy="{{ isNavigating }}" />
        </StackLayout>
      </ActionBar>
  </Page.actionBar>

  <!-- Content -->

  <GridLayout id="container">
  </GridLayout>

</Page>
